<div class="container">
    <div class="row">
        <div class="col-auto">

            {{!-- title results --}}
            <h1 class="mt-4">{{result.title}}</h1>

            {{!-- author results --}}
            <p class="lead">by {{result.authors}}</p>
            <hr>

            <!-- preview book img and info -->
            <div class="row">
                <div class="col-md-5 col-centered">
                    <img class="img-fluid rounded card-img-top" src="{{result.imageURL.thumbnail}}"
                        alt="{{result.title}}">
                </div>

                <div class="col-md-7">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <small>Title:</small> {{result.title}}
                        </li>
                        <li class="list-group-item">
                            <small>Publisher:</small> {{result.publisher}}
                        </li>
                        <li class="list-group-item">
                            <small>Published Date:</small> {{result.publishedDate}}
                        </li>
                    </ul>
                </div>
            </div>

            <!-- post description result -->
            <p class="h3">Description:</p>
            <p class="lead">{{result.description}}</p>
        </div>

        <div class="col-auto">
            {{!-- search widget --}}
            <div class="card my-4">
                <p class="h5 card-header">search</p>
                <div class="card-body">
                    <form action="/search" method="post" id="searchForm">
                        <div class="input-group">
                            <label class="sr-only" for="searchBookTitle">search for a book</label>
                            <input type="text" class="form-control" name="bookTitle" id="searchBookTitle" placeholder="search for book titles">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">search</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

            {{!-- categories --}}
            <div class="card my-4">
                <p class="h5 card-header">Related Categories</p>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled mb-0">
                                {{#each result.categories}}
                                <li>
                                    <a href="/category/{{this}}">{{this}}</a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>