<div class='row'>
  <div class='col-auto'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class='row mt-4'>
  <div class='col-md-6'>
    <h3>Write your review here:</h3>

    <form class='form new-book-form'>
      <div class='form-group'>
        <label for='book-author'>Book author</label>
        <input
          class='form-input'
          type='text'
          id='book-author'
          name='book-author'
        />
      </div>
      <div class='form-group'>
        <label for='book-title'>Book title</label>
        <input
          class='form-input'
          type='text'
          id='book-title'
          name='book-title'
        />
      </div>
      <div class='form-group'>
        <label for='book-rating'>Rate the book ( 100 is the best!):</label>
        <input
          class='form-input'
          type='number'
          id='book-rating'
          name='book-rating'
        />
      </div>
      <div class='form-group'>
        <label for='book-desc'>description:</label>
        <textarea class='form-input' id='book-desc' name='book-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>

  {{#if books.length}}
    <div class='col-md-6 book-list'>
      <h3>Reviewed Books:</h3>

      {{#each books}}
        <div class='row mb-2'>
          <div class='col-md-8'>
            <h4><a href='/book/{{id}}'>{{title}}</a></h4>
          </div>
          <div class='col-md-4'>
            <button
              class='btn btn-sm btn-danger'
              data-id='{{id}}'
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src='./js/profile.js'></script>