    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/">{{title}}
      <h3>by {{author}}</h3></a>
    </h2>
    <p>
      
      <!-- Pass needed_funding value to the helper function -->
      <span class="rating-amount">{{book_rating}}</span>
      OUT OF
      <span for="img" aria-label="out of 100"> ðŸ’¯ </span>
    </p>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  </div>
</div>
{{/each}}





